<!-- Simple JS for progress simulation -->
<script>
    const inputs = document.querySelectorAll('#location, #category, #description, #media');
    const progressBar = document.getElementById('progressBar');
    const encouragement = document.getElementById('encouragement');

    inputs.forEach(input => {
        input.addEventListener('input', () => {
            let filled = 0;
            inputs.forEach(i => {
                if (i.value) filled++;
            });
            const percent = Math.round((filled / inputs.length) * 100);
            progressBar.style.width = percent + '%';
            progressBar.textContent = percent + '%';

            if (percent < 50) {
                encouragement.textContent = "Great start! Keep going 🚀";
            } else if (percent < 100) {
                encouragement.textContent = "Almost there! 🌟";
            } else {
                encouragement.textContent = "Ready to submit! ✅";
            }
        });
    });
</script>
